<?xml version="1.0" encoding="utf-8"?>
<options>
  <!-- Session Validator Settings -->
  <option option_id="wfSessionValidator_enabled" edit_format="onoff" data_type="boolean" advanced="0">
    <default_value>1</default_value>
    <relation group_id="wfSessionValidator" display_order="10"/>
  </option>
  <option option_id="wfSessionValidator_verboseOutput" edit_format="onoff" data_type="boolean" advanced="0">
    <default_value>0</default_value>
    <relation group_id="wfSessionValidator" display_order="30"/>
  </option>
  <option option_id="wfSessionValidator_cloudflareOnly" edit_format="onoff" data_type="boolean" advanced="0">
    <default_value>1</default_value>
    <relation group_id="wfSessionValidator" display_order="40"/>
  </option>
  
  <!-- Cache Optimization Settings -->
  <option option_id="wfCacheOptimizer_enabled" edit_format="onoff" data_type="boolean" advanced="0">
    <default_value>1</default_value>
    <relation group_id="wfSessionValidator" display_order="100"/>
  </option>
  
  <!-- Extended Cache Nodes (comma-separated forum IDs) -->
  <option option_id="wfCacheOptimizer_extendedCacheNodes" edit_format="textbox" data_type="string" advanced="0">
    <default_value>4</default_value>
    <relation group_id="wfSessionValidator" display_order="110"/>
  </option>
  
  <!-- Basic Page Cache Settings -->
  <option option_id="wfCacheOptimizer_homepage" edit_format="spinbox" data_type="positive_integer" advanced="0">

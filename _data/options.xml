    <relation group_id="wfSessionValidator" display_order="130"/>
  </option>
  
  <option option_id="wfCacheOptimizer_defaultEdgeCache" edit_format="spinbox" data_type="positive_integer" advanced="0">
    <default_value>1800</default_value>
    <relation group_id="wfSessionValidator" display_order="135"/>
  </option>
  
  <!-- Forum Cache Settings -->
  <option option_id="wfCacheOptimizer_forums" edit_format="spinbox" data_type="positive_integer" advanced="0">

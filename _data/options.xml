    <default_value>2592000</default_value>
    <relation group_id="wfSessionValidator" display_order="170"/>
  </option>
  
  <!-- Thread Cache Settings (age-based using Last-Modified) -->
  <option option_id="wfCacheOptimizer_threadFresh" edit_format="spinbox" data_type="positive_integer" advanced="0">
    <default_value>600</default_value>
    <relation group_id="wfSessionValidator" display_order="180"/>
